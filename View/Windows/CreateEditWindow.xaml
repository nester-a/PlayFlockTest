<Window x:Class="PlayFlockTest.View.Windows.CreateEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayFlockTest.View.Windows"
        xmlns:cc="clr-namespace:PlayFlockTest.View.CustomControls"
        mc:Ignorable="d"
        x:Name="root"
        Title="CreateEditWindow" Height="406" Width="412" Closing="root_Closing">
    <Grid>
        <cc:EditUnitControl x:Name="editorControl" UnitId="{Binding ElementName=root, Path=RootUnit.Id}" CurrentHp="{Binding ElementName=root, Path=RootUnit.Hp}" CurrentMana="{Binding ElementName=root, Path=RootUnit.Mana}" MaxHp="{Binding ElementName=root, Path=RootUnit.MaxHp}" MaxMana="{Binding ElementName=root, Path=RootUnit.MaxMana}" Armor="{Binding ElementName=root, Path=RootUnit.Armor}" MagResist="{Binding ElementName=root, Path=RootUnit.MagResist}" Class="{Binding ElementName=root, Path=RootUnit.Class}" X="{Binding ElementName=root, Path=RootUnit.X}" Y="{Binding ElementName=root, Path=RootUnit.Y}" RedButtonClick="editorControl_RedButtonClick" GreenButtonClick="editorControl_GreenButtonClick">

        </cc:EditUnitControl>
    </Grid>
</Window>
